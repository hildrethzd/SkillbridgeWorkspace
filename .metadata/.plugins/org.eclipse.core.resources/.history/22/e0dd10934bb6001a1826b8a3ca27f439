package com.skillstorm.threads;

public class AnonAndLambda {

	public static void main(String[] args) {
		
		Thread thread = new Thread(new Runnable() {

			@Override
			public void run() {
				int a = 0;
				while(a < 5) {
					System.out.println("Hello " + Thread.currentThread().getName());
				}
			}		
		});
		
		thread.start();

	}

}
